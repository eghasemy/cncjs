.widget-content {
    position: relative;
    padding: 10px;

    &.hidden {
        display: none;
    }
}

.overrides {
    margin-bottom: 10px;

    .dro {
        margin-bottom: 10px;
    }

    .dro-label,
    .dro-display,
    .dro-btn-group {
        height: 30px;
    }
    .dro-label {
        font-size: 24px;
        line-height: initial;
        text-align: left;
    }
    .dro-display {
        padding: 4px 6px;
        text-align: right;
        font-size: 14px;
        text-overflow: initial;
        margin-right: 5px;
    }
    .dro-btn-group {
        margin-left: 5px;
    }
    .dro-btn {
        padding: 5px 5px;
    }
}

.panel {
    margin-bottom: 10px;

    &:last-child {
        margin-bottom: 0;
    }

    :global {
        .row {
            margin-left: 0;
            margin-right: 0;
        }
        .col {
            padding-left: 5px;
            padding-right: 5px;

            &:first-child {
                padding-left: 0;
            }
            &:last-child {
                padding-right: 0;
            }
        }
    }
}

.panel-heading {
    padding: 5px 10px;
    font-weight: bold;
    background-color: #f5f5f5;
    border-bottom: 1px solid #ddd;
    border-radius: 3px 3px 0 0;
    color: #333;

    .title {
        color: #333;
        font-size: 12px;
        font-weight: bold;
        line-height: 20px;
        text-transform: uppercase;
    }

    .toggle {
        color: #ccc;
    }

    &:hover {
        .toggle {
            color: #337ab7;
        }
    }
}

.widget-controls {
    .btn {
        margin-left: 0;
    }
}

.textbox {
    padding: 2px 6px;
    font-size: 11px;
    line-height: 1.5;
    color: #555;
    background-color: #fff;
    background-image: none;
    border: 1px solid #ccc;
    border-radius: 4px;
    word-wrap: break-word;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.textbox-label {
    color: #666;
    font-size: 11px;
    font-weight: bold;
    line-height: 15px;
    text-transform: uppercase;
}

.well {
    min-height: 20px;
    padding: 5px;
    margin-bottom: 0;
    background-color: #f5f5f5;
    border: 1px solid #e3e3e3;
    border-radius: 4px;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, .05);
}

.navContent {
    overflow: auto;
}

.pre {
    background-color: transparent;
    border: 0;
    border-radius: 0;
    font-size: 11px;
    line-height: 1.42857143;
    margin: 0;
    padding: 0;
    word-break: break-all;
    word-wrap: break-word;
    white-space: pre-wrap;
}

