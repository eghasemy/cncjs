// FluidNC Settings Modal Styles
.fileManager {
    .dropZone {
        border: 2px dashed #ccc;
        border-radius: 8px;
        padding: 40px;
        text-align: center;
        margin-bottom: 20px;
        background-color: #fafafa;
        transition: all 0.3s ease;
        
        &.dragOver {
            border-color: #337ab7;
            background-color: #f0f8ff;
        }
        
        .uploading {
            color: #337ab7;
            font-size: 16px;
        }
        
        p {
            margin-top: 15px;
            color: #666;
        }
    }
    
    .fileListHeader {
        background-color: #f5f5f5;
        padding: 10px;
        border-bottom: 1px solid #ddd;
        font-weight: bold;
    }
    
    .fileRow {
        padding: 8px 10px;
        border-bottom: 1px solid #eee;
        
        &:hover {
            background-color: #f9f9f9;
        }
        
        .activeIndicator {
            color: #f39c12;
        }
    }
    
    .emptyState {
        text-align: center;
        padding: 40px;
        color: #666;
    }
}

.configEditor {
    .editorContainer {
        position: relative;
        margin-bottom: 20px;
    }
    
    .changeIndicator {
        background-color: #fcf8e3;
        border: 1px solid #faebcc;
        color: #8a6d3b;
        padding: 8px 12px;
        border-radius: 4px;
        margin-bottom: 10px;
    }
    
    .configTextarea {
        width: 100%;
        height: 300px;
        font-family: 'Monaco', 'Consolas', 'Courier New', monospace;
        font-size: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 10px;
        resize: vertical;
        
        &:focus {
            outline: none;
            border-color: #337ab7;
            box-shadow: 0 0 5px rgba(51, 122, 183, 0.3);
        }
    }
    
    .helpText {
        background-color: #f9f9f9;
        padding: 15px;
        border-radius: 4px;
        
        h5, h6 {
            margin-top: 0;
        }
        
        ul {
            margin-bottom: 10px;
        }
    }
    
    .configReference {
        font-size: 12px;
        
        strong {
            color: #337ab7;
        }
        
        ul {
            font-size: 11px;
            color: #666;
        }
    }
}

.endstopTester {
    .endstopGrid {
        margin-bottom: 30px;
    }
    
    .axisSection {
        border: 1px solid #ddd;
        border-radius: 4px;
        padding: 15px;
        margin-bottom: 15px;
        
        h6 {
            margin-top: 0;
            color: #337ab7;
        }
    }
    
    .endstopStatus {
        .endstopIndicator {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
            
            .label {
                min-width: 100px;
                font-weight: bold;
                font-size: 12px;
            }
            
            .status {
                display: flex;
                align-items: center;
                font-size: 12px;
                
                &.triggered {
                    color: #d9534f;
                }
                
                &.open {
                    color: #5cb85c;
                }
            }
        }
    }
    
    .testControls {
        text-align: right;
    }
    
    .helpSection {
        background-color: #f9f9f9;
        padding: 15px;
        border-radius: 4px;
        margin-top: 20px;
        
        h6 {
            margin-top: 0;
        }
        
        .warningBox {
            background-color: #fcf8e3;
            border: 1px solid #faebcc;
            color: #8a6d3b;
            padding: 10px;
            border-radius: 4px;
            margin-top: 15px;
        }
    }
}

.systemTab {
    .deviceInfo {
        background-color: #f9f9f9;
        padding: 10px;
        border-radius: 4px;
        margin-top: 10px;
        
        div {
            margin-bottom: 5px;
            
            &:last-child {
                margin-bottom: 0;
            }
        }
    }
}