.height-map-visualizer {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  background-color: #f8f9fa;
  border: 1px solid #ddd;
  border-radius: 4px;
  margin: 10px 0;

  .canvas {
    border: 1px solid #ccc;
    border-radius: 2px;
    background-color: white;
  }
}